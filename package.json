{
    "name": "sourceprime",
    "description": "SourcePrime: A neon-charged Ghost theme fork from TryGhost/Source, powering lokisoft.xyz's free education quest! Features sticky navigation bars, dynamic TOCs via tocbot, Prism code highlights, and customizable accents. Open-source, community-driven â€” join the adventure! #LokiSoftZeroToHero",
    "demo": "https://spurceprime.lokisoft.xyz",
    "version": "0.1.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Arron Ohnemus",
        "email": "arronohnemus@lokisoft.xyz",
        "url": "https://lokisoft.xyz"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/LokiRothbrook/SourcePrime.git"
    },
    "bugs": "https://github.com/LokiRothbrook/SourcePrime/issues",
    "contributors": [
        "https://github.com/LokiRothbrook/SourcePrime/graphs/contributors"
    ],
    "devDependencies": {
        "@tryghost/release-utils": "0.8.1",
        "autoprefixer": "10.4.7",
        "beeper": "2.1.0",
        "cssnano": "5.1.12",
        "gscan": "4.49.1",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "8.2.4",
        "postcss": "8.2.13",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 160
            },
            "s": {
                "width": 320
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo in the middle",
                    "Logo on the left"
                ],
                "default": "Logo in the middle",
                "description": "Choose the layout of your navigation bar"
            },
            "site_background_color": {
                "type": "color",
                "default": "#ffffff",
                "description": "The background color of your site"
            },
            "second_accent_color": {
                "type": "color",
                "default": "#000000",
                "description": "The second accent color of your site, used for input boxes and prism backgrounds"
            },
            "glow_color": {
                "type": "color",
                "default": "#000000",
                "description": "The glow color of your site, also used for header and footer link colors"
            },
            "header_color": {
                "type": "select",
                "options": [
                    "Background color",
                    "Accent color",
                    "Second Accent color",
                    "Glow color"
                ],
                "default": "Background color",
                "description": "Choose the color of your header, used for the header background"
            },
            "footer_color": {
                "type": "select",
                "options": [
                    "Background color",
                    "Accent color",
                    "Second Accent color",
                    "Glow color"
                ],
                "default": "Background color",
                "description": "Choose the color of your footer, used for the footer background"
            },
            "signup_heading": {
                "type": "text",
                "description": "Used in your footer across your theme, defaults to site title when empty"
            },
            "signup_subheading": {
                "type": "text",
                "description": "Defaults to site description when empty"
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Landing",
                    "Highlight",
                    "Magazine",
                    "Off"
                ],
                "description": "Landing is recommended for all sites, Highlight & Magazine for those with more content",
                "default": "Landing",
                "group": "homepage"
            },
            "post_feed_style": {
                "type": "select",
                "options": [
                    "List",
                    "Grid"
                ],
                "default": "List",
                "group": "homepage",
                "description": "Choose the style of your post feed on the homepage"
            },
            "enable_drop_caps_on_posts": {
                "type": "boolean",
                "default": false,
                "group": "post",
                "description": "Enable drop caps on posts, this will add a drop cap to the first letter of each post"
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    }
}
